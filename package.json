{
  "name": "@crzgames/website_backend",
  "version": "1.25.2",
  "private": true,
  "scripts": {
    "dev": "node ace serve --watch",
    "build": "node ace build --production",
    "adonis:swagger:generate": "node ace swagger:generate",
    "adonis:db:seed": "node ace db:seed",
    "adonis:db:truncate": "node ace db:truncate",
    "adonis:db:wipe": "node ace db:wipe",
    "adonis:migration:fresh:develop": "node ace migration:fresh --seed",
    "adonis:migration:run:develop": "node ace migration:run",
    "adonis:migration:run:staging-prod": "node ace migration:run --force",
    "test:dev": "npm run adonis:swagger:generate && node ace test --watch",
    "test:staging-prod": "npm run adonis:swagger:generate && node ace test",
    "lint": "npm run lint:prettier && npm run lint:eslint && npm run lint:ts",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint .",
    "lint:ts": "node ace type-check",
    "lint:fix": "prettier --write --list-different . && npm run lint:ts --fix && npm run lint:eslint --fix",
    "postbuild": "npm run adonis:swagger:generate && cp -a docs/swagger build/docs",
    "prepare": "husky"
  },
  "dependencies": {
    "@adonisjs/auth": "^8.2.3",
    "@adonisjs/bouncer": "^2.3.0",
    "@adonisjs/core": "^5.9.0",
    "@adonisjs/drive-s3": "^1.3.3",
    "@adonisjs/i18n": "^1.6.0",
    "@adonisjs/lucid": "^18.4.2",
    "@adonisjs/mail": "^8.2.1",
    "@adonisjs/repl": "^3.1.11",
    "@adonisjs/validator": "^12.5.0",
    "@adonisjs/view": "^6.2.0",
    "@aws-sdk/client-s3": "^3.609.0",
    "adonis5-swagger": "^1.4.1",
    "archiver": "^7.0.1",
    "axios": "^1.7.2",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.4.4",
    "mjml": "^4.15.3",
    "mysql2": "^3.10.2",
    "nats": "^2.28.0",
    "node-mailjet": "^6.0.5",
    "phc-argon2": "^1.1.4",
    "phc-bcrypt": "^1.0.8",
    "proxy-addr": "^2.0.7",
    "proxycheck-ts": "^0.0.9",
    "reflect-metadata": "^0.2.2",
    "source-map-support": "^0.5.21",
    "stripe": "^16.5.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.9.6",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@japa/preset-adonis": "^1.2.0",
    "@japa/runner": "^2.5.1",
    "@stylistic/eslint-plugin": "^2.3.0",
    "@types/archiver": "^6.0.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mjml": "^4.7.4",
    "@types/node": "^20.14.11",
    "@types/node-mailjet": "^3.3.12",
    "@types/proxy-addr": "^2.0.3",
    "@types/source-map-support": "^0.5.10",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^7.18.0",
    "adonis-preset-ts": "^2.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^48.4.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unused-imports": "^3.2.0",
    "husky": "^9.1.1",
    "npm-check-updates": "^16.14.20",
    "pino-pretty": "^11.2.1",
    "prettier": "^3.3.3",
    "typescript": "~5.5.3",
    "youch": "^3.3.3",
    "youch-terminal": "^2.2.3"
  },
  "engines": {
    "node": ">=20.12.2"
  }
}
